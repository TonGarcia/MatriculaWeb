    a data-toggle="collapse" href="#subscriptionsActions"
      i.ion-chatbox-working
      p
        =t('actions.subscriptions.name')
        b.caret
    #subscriptionsActions.collapse
      ul.nav
        li
          a href="#{subscriptions_path}"
            =t('actions.subscriptions.action_name')


