ul.nav
  li class=(('active ' if current_page?(subjects_path))) aria-expanded=(('true ' if current_page?(subjects_path) || current_page_includes?('subjects') ))
    a data-toggle="collapse" href="#subjectsActions"
      i.ion-briefcase
      p
        =t('actions.subjects.name')
        b.caret
    #subjectsActions.collapse
      ul.nav
        li
          a href="#{subjects_path}"
            =t('actions.subjects.action_name')
